@model Escuela;

@{
    ViewData["Title"] = "Informaciòn Escuela";
    Layout = "Simple";
}

<h1>Escuela</h1>
<h2>Nombre: @Model.Nombre</h2>
<p><strong>Año Fundaciòn: @Model.AñoDeCreación</strong> </p>
<ul>
    <li>Tipo de Escuela: @Model.TipoEscuela</li>
    <li>Pais: @Model.Pais</li>
    <li>Ciudad: @Model.Ciudad</li>
    <li>Direcciòn: @Model.Dirección</li>
</ul>

<p><i>@ViewBag.CosaDinamica</i></p>